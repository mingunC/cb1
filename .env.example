# Supabase (required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=public-anon-key-from-supabase
SUPABASE_SERVICE_ROLE_KEY=service-role-key-for-secure-server-usage

# Application (required)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Contact form (required for production email routing)
CONTACT_EMAIL=admin@yourdomain.com

# Mailgun configuration (required if using Mailgun)
MAILGUN_API_KEY=mailgun-api-key
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_DOMAIN_URL=https://api.mailgun.net   # use https://api.eu.mailgun.net for EU regions

# Optional email service integrations
RESEND_API_KEY=   # set only if using Resend instead of Mailgun
EMAIL_FROM_NAME=CB1 Platform
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_REPLY_TO=support@yourdomain.com
